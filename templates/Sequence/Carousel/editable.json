{
	"#carousel": {
		"add-option": true
	},
	".item": {
		"delete": true,
		"image": {
			"act-on": ".item_inner",
			"show-placeholder": false
		},
		"resize": {
			"resize-height":true
		},
		"color": true,
		"inset": true
	},
	".carousel_caption": {
		"animation": true,
		"image": {
			"show-placeholder": false
		},
		"delete": true,
		"resize": true,
		"move": true,
		"color": true,
		"border": true,
		"font": {
			"size": true,
			"family":false
		}
	},
	".carousel_text": {
		"text": {
			"html": true
		}
	}
}